<% include partials\header %>

<div class="ui main text container">
  <div class="ui huge centered text container header">Welcome To Blog App</div>
  <div class="ui top attached segment">
    <div class="ui divided items">
      <% for (var i = 0; i < all.length; i++) { %>
          <div class="item">
            <div class="image">
              <img src="<%= all[i].image %>">
            </div>
            <div class="content">
              <a class="header" href="/blog/<%= all[i]._id %>"> <%= all[i].title %> </a>
              <div class="meta">
                <span> <%= all[i].created.toDateString() %> </span>
              </div>
              <div class="description">
                <p> <%- all[i].body.substring(0, 100) %>... </p>
              </div>
              <div class="extra">
                <a class="ui floated basic black button" href="/blog/<%= all[i]._id %>">
                  Read More
                  <i class="right chevron icon"></i>
                 </a>
              </div>
            </div>
          </div>
      <% } %>

    </div>
  </div>
</div>

<% include partials\footer %>
